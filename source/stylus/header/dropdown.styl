ul,
li {
  list-style-type: none;
}
.accordion {
  -webkit-margin-before: 0;
  -webkit-margin-after: 0;
  -webkit-padding-start: 0;
  overflow: hidden;
  list-style-type: none;
  padding: 0;
  margin: 0
}
.accordion:after {
  display: table;
  content: '';
  clear: both;
}
@media screen and (min-width: 1008px) {
  .accordion {
    overflow: visible;
    margin: 0;
    padding: 0;
    list-style-type: none;
  }
}
.accordion,
.accordion * {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
//accordion-section

@media screen and (min-width: 1008px) {
  .accordion-section,
  .accordion > li {
    display: block !important;
    float: left !important;
    position:relative;
  }
  .accordion-section--megaMenu,
  .accordion > li.accordion-section--megaMenu {
    position: static;
  }
}
//accordion-section
//nav-top__heading
.nav-top__heading {
  margin: 0;
  border-bottom: 1px solid #9a9899;
  font-weight: 400;
  background: none;
  padding: 0;
}
.nav-top__heading a {
  width: 100%;
  padding: 15px 15px 15px 30px;
  display: inline-block;
  background-color: #fff;
  transition: all linear 0.15s;
  text-decoration: none;
  color: #2b2b2b;
  font-family: $font-family-brand-text
  font-size: 20px;
  line-height: normal;
  font-weight: normal;
  overflow: visible;
  border-left: none;
}
.nav-top__heading a:hover,
.nav-top__heading a:active {
  color: #30beef;
  text-decoration: none;
  border-bottom: 0;
}

@media screen and (min-width: 1008px) {
  .nav-top__heading {
    background: #5f5f5f;
    background: linear-gradient(to bottom, #5f5f5f 0, #373737 100%);
    border-bottom: none;
    line-height: 1;
    margin-top: 0;
    margin-left: 0px;
    margin-bottom: 0px;
  }
  .nav-top__heading a {
    padding: 10px;
    background-color: transparent;
    border-left: 1px solid #444;
    cursor: pointer;
    color: #fff;
    text-decoration: none;
    font-family: $font-family-text
    font-size: 12px;
    line-height: 12px;
    font-weight: bold;
  }
  .nav-top__heading a:hover,
  .nav-top__heading a:active {
    color: #FFF;
    text-decoration: none;
    border-bottom: 0;
    background: linear-gradient(to bottom, #7686a0 0, #596480 100%);
  }

}
@media screen and (max-width: 1008px) {
  .accordion-section-title.active {
    color: $color-brand-blue
  }
  .accordion-section-title.active:after {
    content: "\00D7";
    font-family: $font-family-text;
    font-weight: normal;
    font-size: 1.25em;
    line-height: .8;
    width: auto;
  }
}
@media screen and (min-width: 1008px) {
  .accordion-section-title {
      font-family: $font-family-text
      font-size: 12px;
      font-weight: bold;
      color: white;
      text-decoration: none;
  }
}

.accordion-section-title:after {
  float: right;
  transition: content linear 0.25s;
  content: url("http://cache1.artprintimages.com/images/header/arrow.svg");
  display: block;
  fill: #4d4d4d;
  width: 7px;
  height: 100%;
}
@media screen and (min-width: 1008px) {
  .accordion-section-title:after {
    display: none;
    font-size: 0;
  }
}

//nav-top__heading
.dropdown {
  max-width: 100%;
  height: 100%;
  overflow: hidden;
  border-bottom: 1px solid #bbb;
  display: block;
  font: normal normal 18px/1.4 $font-family-brand-text
}
  @media screen and (min-width: 1008px) {
    .dropdown {
      white-space: nowrap;
      border: 0;
      background-color: rgba(255,255,255,0.9);
      background-color: $color-offwhite
      border: 1px solid #7686a0;
      padding-left: 0px;
    }
  }
.dropdown .megaMenuFloat {
    width: 100%;
}
@media screen and (min-width: 1008px) {
  .dropdown .megaMenuFloat {
    width: 12.5%;
  }
}
.dropdown .megaMenuFloat .megaMenuTitle {
    display: block;
    padding: 14px 0 14px 54px;
    border-top: 1px solid #999;
    background-color: #EFEFEF;
    color: #666;
    margin-bottom: 0px;
    text-decoration: none;
    font-size: 14px;
    font: normal normal bold 18px/1.4 $font-family-brand-text
}
@media screen and (min-width: 1008px) {
  .dropdown .megaMenuFloat .megaMenuTitle {
    padding: 3px 10px;
    font-family: $font-family-text
    font-size: 12px;
    font-weight: bold;
  }
  .dropdown .megaMenuFloat .megaMenuTitle:hover {
    color: $color-brand-blue
    text-decoration: underline
  }
}

.dropdown__list--borderbottom {
  border-bottom: 1px solid #999;
}
.dropdown__list {
  list-style: none;
  padding: 0;
  margin: 0;
  background-color: $color-offwhite;
  border: none;
}
.dropdown__list li{
  padding-top: 0px;
  padding-bottom: 0px;
}
@media screen and (min-width: 1008px) {
  .dropdown__list {
      padding: 0;
      margin: 0;
  }
  .dropdown__list li {
      display: block;
  }
}
.dropdown__list li a {
  display: block;
  padding: 14px 0 14px 54px;
  border-top: 1px solid #999;
  color: #666;
  margin-bottom: 0px;
  text-decoration: none;
  font-size: 14px;
  font: normal normal 18px/1.4 $font-family-brand-text
}
.dropdown__list li a:hover{
  text-decoration:none;
  background-color: #ddd;
}
@media screen and (min-width: 1008px) {
  .dropdown__list li a {
    padding: 3px 10px;
    font-family: $font-family-text
    font-size: 12px;
    border: none;
    color: $color-black
  }
  .dropdown__list li a:hover {
    color: $color-brand-blue
    text-decoration: underline;
    background-color: transparent;
  }
}
.headerLine{
  display:none;
}
@media screen and (min-width: 1008px) {
  .headerLine {
    display: block;
    padding-bottom: 5px;
    margin-left: 5px;
    margin-right: 5px;
    border-bottom: 1px solid rgb(204, 204, 204);
  }
}
.accordion-section .accordion-section-content {
  clear: both;
  display: none;
  z-index: 1000;
}
@media screen and (min-width: 1008px) {
  .accordion-section .accordion-section-content {
      display: none;
      position: absolute;
  }
  .accordion-section:hover .accordion-section-content {
      display: block !important;
  }
  .accordion-section--megaMenu .accordion-section-content {
    left: 0;
    right: 0;
  }
}

@media screen and (max-width: 1008px) {
  .notop {
    border-top: 0px !important;
  }
}
.dropdown-footer * {
  box-sizing: border-box;
}
.dropdown-footer h2 {

  line-height: .9
}

.dropdown-footer .hdr-social {
  padding: 12px;
}
.dropdown-footer .hdr-social ul {
  list-style: none;
  margin: 0;
  padding: 0;
  cursor: pointer;
}
@media screen and (min-width: 415px) {
  .dropdown-footer .hdr-social ul {
    width: 306px;
  }
}
.dropdown-footer .hdr-social ul:after {
  display: table;
  clear: both;
  content: '';
}
.dropdown-footer .hdr-social ul li, .hdr-social ul li a {
  text-decoration: none;
  font-weight: normal;
  line-height: 17px;
}

.dropdown-footer .hdr-social li {
  display: block;
  padding: 0 3px;
  width: 20%;
  float: left;
}
.dropdown-footer .hdr-social .social-icon {
  fill: #FFF;
  width: 100%;
  height: auto;
}


.dropdown-footer .dropdown-footer-list li a {
  display: block;
  padding: 14px 0 14px 14px;
  background: $color-black
  border-top: 1px solid #999;
  color: #FFF;
  margin-bottom: 0px;
  text-decoration: none;
  font: normal normal 24px/1.4 $font-family-brand-heading
  text-transform: uppercase;
}
.dropdown-footer .dropdown-footer-list li a:hover {
  background: $color-darkgray
}
@media screen and (min-width: 1008px) {
  .dropdown-footer {
    display: none;
  }
}

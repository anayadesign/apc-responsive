  font-family: $font-family-brand-heading
  font-weight: normal;
  font-size: 24px;
  color: #FFF;
  text-transform: uppercase;
}
.dropdown-footer .dropdown-footer-email {
  padding: 0 12px 0
}
.dropdown-footer-email #header_email_capture.emailCapture-menu {
  display: block;
  width: auto;
  margin: 0;
  background-color: transparent;
  border: none;
  position: static;
  padding: 0;
}
.dropdown-footer .dropdown-footer-email .emailSignUpInput {

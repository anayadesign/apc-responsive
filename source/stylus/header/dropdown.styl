// compiles all styl in /source/stylus/header

ul,
li {
    list-style-type: none;
}

.accordian {
    margin-top: 0;
    margin-bottom: 0;
    overflow: hidden;
    list-style-type: none;
    padding: 0;
    max-width: 400px;
      box-shadow: 0 0 5px #bbb;
}

.accordian,
.accordian * {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.accordian-section-content {
    clear: both;
}

.nav-menu h2,
.nav-menu h3 {
    font-family: "Glyddon";
    font-weight: normal;
    font-size: 24px;
    line-height: normal;
}

.nav-top__heading {
    margin: 0;
    border-bottom: 1px solid #9a9899;
    font-weight: 400;
}

.nav-top__heading a {
    width: 100%;
    padding: 15px 15px 15px 30px;
    display: inline-block;
    background: #FFF;
    transition: all linear .15s;
    text-decoration: none;
    color: #000;
    font-family: "Glyddon", Helvetica;
    font-size: 20px;
    font-weight: normal;
    overflow: visible;
}

.nav-top__heading a:hover,
.nav-top__heading a:active {
    color: #30beef;
    text-decoration: none;
    border-bottom:0;
}

.accordion-section-title:after {
    float: right;
    transition: content linear .25s;
    content: url("http://cache1.artprintimages.com/images/header/arrow.svg");
    display: block;
    fill: #4d4d4d;
    width: 7px;
    height: 7px;
    margin-top: 5px;
}

.dropdown {
    background-color: #efefef;
    max-width: 100%;
    height: 100%;
    overflow: hidden;
    border-bottom: 1px solid #bbb;
    display: block;
    font: normal normal 18px/1.4 "Glyddon", Times, serif;
}

.dropdown__list--borderbottom {
    border-bottom: 1px solid #999799
}

.dropdown__list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.dropdown__list a {
    display: block;
    padding: 14px 54px;
    border-top: 1px solid #999799;
    color: #666666;
    text-decoration: none;
}
.dropdown__list a:hover {
  background-color: #ddd;
}
.notop{
  border-top: 0px!important;
}

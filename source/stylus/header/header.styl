// compiles all styl in /source/sylus/header

.mobile {
  display: block;
}

.mobile-inline {
  display: inline-block;
}

.desktop {
  display: none;
}

.desktop-inline {
  display: none;
}

.both-inline {
  display: inline;
}

header {
  width: 100%;
  background: $color-black;
  color: #FFF;
  font-size: 16px;
}

@media screen and (min-width: 1008px) {
  .mobile {
    display: none;
  }
  .mobile-inline {
    display: none;
  }
  .desktop {
    display: block;
  }
  .desktop-inline {
    display: inline;
  }
  header {
    max-width: 1008px;
    margin: 0 auto;
    background: $color-brand-red;
    color: #FFF;
    font-family: $font-family-text
  }
}

header nav:after {
  display: table;
  content: '';
  clear: both;
}

.both.logo {
  width: 50%;
  float: left;
}

.logo img {
  display: block;
  width: 100%;
  height: auto;
}

@media screen and (min-width: 1008px) {
  .both.logo {
    width: auto;
  }
}
.nav-main .mobile {
  float: left;
}
@media screen and (min-width: 1008px) {
  .nav-main {
    padding: 10px;
  }
  .nav-main a {
    color: #FFF;
    text-decoration: none;
  }
  .nav-main a:hover {
    color: #FFF;
    text-decoration: underline;
  }
}

.nav-menu {
  width: 80%;
  height: 100%;
  position: absolute;
  overflow-y: auto;
  overflow-x: hidden;
  top: 0;
  left: -80%;
  background: $color-black
  padding: 0 0 30px;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
          font-smoothing: antialiased;
  -moz-box-shadow: 0 0 5px #bbb;
       box-shadow: 0 0 5px #bbb;
  border-right: 1px solid #bbb;
  -webkit-text-size-adjust: none;
}

@media screen and (min-width: 1008px) {
  .nav-menu {
    background: #5f5f5f;
    background: linear-gradient(to bottom, #5f5f5f 0, #373737 100%);
    -moz-box-shadow: none;
    box-shadow: none;
    border: none;
    position: relative;
    left: 0;
    width: 100%;
    overflow: visible;
    padding: 0;
  }
}

.bodyAllowHelp #pageContainer {
  overflow-x: hidden;
  overflow-y: hidden;
  height: 100%;
}
#pageContainer.off-canvas-active .nav-menu {
  left: 0;
}

#pageContainer.off-canvas-active #main,
#pageContainer.off-canvas-active .nav-main,
#pageContainer.off-canvas-active .tableContainer,
#pageContainer.off-canvas-active #aspnetForm,
#pageContainer.off-canvas-active footer {
  left: 80%;
  position: relative;
}
#pageContainer.off-canvas-active #main:before,
#pageContainer.off-canvas-active .tableContainer:before {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,.5);
    z-index: 1;
    content: '';
}

@import "nav-main"
@import "dropdown"
@import "loginTray"
@import "search"

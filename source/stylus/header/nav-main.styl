
.nav-main #headerTop,
.nav-main .headerTop {
  display: none;
}
@media screen and (min-width: 1008px) {
  .nav-main #headerTop,
  .nav-main .headerTop {
    float: right;
    display: block;
    padding-right: 0;
    font-size: 13px;
    box-sizing: border-box;
  }
}
.nav-main .hamburger,
.nav-main .search-mobile,
.nav-main .favorites,
.nav-main .headrCart {
  width: 44px;
  text-align: center;
  padding-top: 10px;
}

.nav-main .favorites {
  width: 12.5%;
}
.nav-main .headerTop #headerMLS {
  float: none;
  display: inline-block;
  background-color: #FFF;
  padding: 2px;
  color: #C62018;
  margin-top: 0;
  margin-left: 8px;
  font-size: 13px;
  font-weight: bold;
  cursor: pointer;
}

.nav-main .headerVP {
  display:none;
}
@media screen and (min-width: 1008px) {
  .nav-main .headerVP {
    display: block;
    float: right;
  }
  .nav-main .headerVP .headerValueProp {
    float: none;
    display: inline;
  }
  .nav-main .headerVP .headerValueProp:hover {
    text-decoration: underline;
    cursor: pointer;
  }
  .nav-main .headerVP .valuePropsDividerLog  {
    float: none;
    display: inline;
    margin: 0;
    color: white;
  }
  .nav-main .myAcct-dropdown {
    display: inline;
    position: relative;
  }
  .nav-main .myAcct-dropdown #DD_outCont {
    left:0;
  }
}

.nav-main--content #headerCart {
  margin-top: 0;
  color: #FFF;
  clear: right;
  width: 12.5%;
  position: relative;
  padding-left: 0;
}

.nav-main--content #headerCart a {
  text-decoration: none;
  color: #FFF;
}

.nav-main--content #headerCart a:hover {
  text-decoration: underline;
  color: #FFF;
}

.nav-main--content #headerCart #cartCount {
  float: none;
  position: absolute;
}
.nav-main--search {
  clear: both;
}
@media screen and (min-width: 1008px) {
  .nav-main--search {
    display: none !important;
  }
}
